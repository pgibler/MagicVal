<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.magicval"
    android:versionCode="1"
    android:versionName="1.1" >

    <!-- Target SDK version - 4.4 Jellybean -->
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"  />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:configChanges="orientation|keyboardHidden" >
        
        <activity
            android:name=".MagicValActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplaySingleCardActivity"
            android:label="@string/display_single_card_activity"
            android:noHistory="true"
            android:stateNotNeeded="true" >
        </activity>
        <activity
            android:name=".SearchForActivity"
            android:label="@string/search_for_activity"
            android:launchMode="standard"
            android:noHistory="false"
            android:stateNotNeeded="false" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" >
                </action>

                <category android:name="android.intent.category.DEFAULT" >
                </category>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchForActivity" >
        </meta-data>
    </application>

</manifest>